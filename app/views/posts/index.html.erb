<!DOCTYPE html>
<head>
  <link rel="stylesheet" href="posts.scss">
</head>
<div class="main-body">
  <% if false %>
    
    <div class="users">
      USERS:
      <% @users.each do |user| %>
      <%= link_to user.email, user_url(user.id), style: 'color: red' %>
      <% end %>
    </div>  
  <% end %>
  <% if true %>
    
    <div class="categories">
      Сategories:
      <% @categories.each do |category| %>
      <%= link_to category.name, category_path(category),  style: 'color: red' %>
      <% end %>
    </div>  
  <% end %>

  <!-- Поставь тут иф, чтобы в ошибку не уходило когда нет постов -->


      <% @posts.each do |post| %>
        <div class="profile-post" id='posts' href="#ebhwjd">
          <%= image_tag post.image.url(:thumb), class: 'mini-img-class' if post.image? %>
          <div class="profile-post-data">
            <h3><%= link_to post.title, post_path(post) %></h3>
            <h5><%= link_to t('common.author'), user_url(post.owner_id) %></h5> <!-- Добавь тут Юзера а не протсо слово автор -->
            <div class="price">
              <p><%= post.price %> PLN</p>
              <small><%= post.created_at %></small>
            </div>
            <div class="block-with-text">
                  <%= post.body %>
            </div>
            
          </div>
        </div>


      <% end %>
    <%= will_paginate @posts %>
    
</div>

