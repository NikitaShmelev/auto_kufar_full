    <div class="announcement-full">
      <h1 style="text-align: center;"><%= @post.title %></h1>
      <%= image_tag @post.image.url(:large), class: 'img-class' if @post.image? %>
      <h3>100000$ NIKITA DOBAV PRICE</h3>
      <p>Not new</p>
      <p><%= @post.body %></p>
      <small>07.08.2021 NIKITA DOBAV</small>
      <div class="action">
        <% if @post.owner_id == current_user.id %>
        <%= link_to 'Edit', edit_post_path(@post), class: "create-btn" %>
        <br></br>
        <%else %>
        <%end%>
      </div>
    </div>
