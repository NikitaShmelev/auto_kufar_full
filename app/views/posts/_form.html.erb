<link rel="stylesheet" href="posts.css">
<%= form_for @post,html: {multipart: true} do |f| %>
    <div class="form-group">
        <h3>Title</h3>
        <%= f.text_field :title, class:"title-input"%>  
    </div>


    <div class="form-group">
        <h3>Body</h3>
        <%= f.text_area :body, class:"body-input" %>
    </div>

    <div class="form-group">
        <%= f.file_field :image, class:"image-input" %>
    </div>

    <div class="form-group">
        <%= f.submit 'Create', class:"create-btn"%>
    </div>
 
<% end %>