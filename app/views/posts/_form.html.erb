<link rel="stylesheet" href="posts.css">
<%= form_for @post,html: {multipart: true} do |f| %>
    <div class="form-group">
        <%= f.text_field :title, class:"title-input", placeholder:t("posts.new.post_name")%>  
    </div>
    
    <div class="form-group">
         <h5><%= f.label :price%></h5>
        <%= f.text_field :price, class:"title-input", type: "number"%>  
    </div>
    <div class="form-group">
        <%= f.label :category_id %>
        <%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: false }, class: 'form-control' %>
    </div>


    <div class="form-group">
        <h5><%= f.label :body%></h5>
        <%= f.text_area :body, class:"body-input", placeholder:t("posts.new.description") %>
    </div>

    <div class="form-group">
        <h5>Image</h5>
        <%= f.file_field :image, class:"image-input" %>
    </div>

    <div class="form-group">
        <%= f.submit t('common.create'), class:"create-btn"%>
    </div>
 
<% end %>