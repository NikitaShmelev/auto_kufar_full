<%= form_for @post,html: {multipart: true} do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>  
    </div>


    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>

    <div class="form-group">
        <%= f.file_field :image %>
    </div>

    <div class="form-group">
    </div>

    <div class="form-group">
        <%= f.submit 'Create' %>
    </div>
 
<% end %>